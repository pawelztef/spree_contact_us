<% content_for :head do -%>
  <meta name="title" content="<%= Spree.t(:contact_us_title) %>">
<% end -%>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>


<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <div class="page-title">
        <h1><%= Spree.t(:contact_us_title) %></h1>
        <p>We love to talk. Let's listen to what you have to say!</p>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class=" row">
    <div class="col-md-8 col-md-offset-1">
      <%= form_for @contact, :url => contacts_path, :html => { :novalidate => '' } do |f| %>
        <div class="row">
          <% if SpreeContactUs.require_name %>
            <div class="col-sm-6">
              <%= f.text_field :name, class: 'required form-control', placeholder: '* Your Name' %>
            </div>
          <% end %>
          <div class="<%= !SpreeContactUs.require_name ? "col-sm-12" : "col-sm-6" %>">
            <%= f.email_field :email, class: 'required form-control email', placeholder: '* Your Email' %>
          </div>
        </div>
        <% if SpreeContactUs.require_subject %>
          <%= f.text_field :subject, class: 'required form-control', placeholder: '* Your Subject' %>
        <% end %>
        <%= f.text_area :message, class: 'required form-control', placeholder: '* Your Message', rows: 10 %>
        <%= f.submit Spree.t(:submit), :alt => Spree.t(:submit), :id => 'contact_us_contact_submit', :title => Spree.t(:submit), class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-3">
      <div class="contact-info">
        <div class="box-con">
          <div class="icon">
            <span class="ti-email"></span>
          </div>
          <div class="details">
            <h3>Email</h3>
            <p> hello@example.com</p>
          </div>
        </div>
        <div class="box-con">
          <div class="icon">
            <span class="ti-mobile"></span>
          </div>
          <div class="details">
            <h3>Phone</h3>
            <p>Sales: +44 - 02920111222
            <br> Enquiries: +44 - 02920111444</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

